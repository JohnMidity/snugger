{% extends 'templates/app.twig' %}

{% block content %}
<div class="row">
	<div class="col-md">
		<div class="panel panel-default">
			<div class="panel-heading">Sign Up</div>
			<div class="panel-body">
				<form action="{{ path_for('auth.signup') }}" method="POST"
					autocomplete="off">
					<div class="form-group">
						<label for="">Email</label> <input
							class="form-control{{ errors.email ? ' is-invalid' : ''}}"
							type="email" name="email" id="email" placeholder="you@domain.com"
							value="{{ old.email }}">
						{% if errors.email %}
						<span class="help-block"> {{ errors.email | first }}
						</span>
						{% endif %}
					</div>
					<div class="form-group">
						<label for="">Name</label> <input class="form-control{{ errors.name ? ' is-invalid' : ''}}" type="text"
							name="name" id="name" value="{{ old.name }}">
						{% if errors.name %}
						<span class="help-block"> {{ errors.name | first }}
						</span>
						{% endif %}
					</div>
					<div class="form-group">
						<label for="">Password</label> <input class="form-control{{ errors.password ? ' is-invalid' : ''}}"
							type="password" name="password" id="password" value="">
						{% if errors.password %}
						<span class="help-block"> {{ errors.password | first }}
						</span>
						{% endif %}
					</div>
					<button type="submit" class="btn btn-default">Sign Up</button>

					{{ csrf.field | raw }}
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}